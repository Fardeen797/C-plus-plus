// link: https://www.youtube.com/watch?v=WB6gNXfTsX8

#include<iostream>
using namespace std;
int main()
{
	int enter;
	int Sedan=0,SUV=0,Bike=0;
  while(true){
	int enter;
	int car=0,raksha=0,bus=0;
	cout<<"press 1 to enter Sedan"<<endl;
	cout<<"press 2 to enter SUV"<<endl;
	cout<<"press 3 to enter Bike"<<endl;
	cout<<"press 4 to Show the record"<<endl;
	cout<<"press 5 to Delete the record"<<endl;
	cout<<"press 6 to Exit"<<endl;
	cin>>enter;
	if(enter==1)
	{
		Sedan++;
		cout<<"Sedan is added"<<endl;
	}
	
	else if(enter==2)
	{
		SUV++;
			cout<<"SUV is added"<<endl;
	}
	
	else if(enter==3)
	{
		Bike++;
			cout<<"Bike is added"<<endl;
	}
	else if(enter==4)
	{
		cout<<"Sedan"<<car<<endl;
		cout<<"SUV"<<raksha<<endl;
		cout<<"Bike"<<bus<<endl;
	}
	else if(enter==5)
	{
		Sedan=0;
		SUV=0;
		Bike=0;
	}
	else if(enter==6)
	{
		exit(0);
	}
	else{
		cout<<"invalid input"<<endl;
	}
}
}
